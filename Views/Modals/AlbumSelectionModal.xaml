<Window x:Class="VaultsII.Views.Modals.AlbumSelectionModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VaultsII.Views.Modals"
        mc:Ignorable="d"
        Title="AlbumSelectionModal" Height="450" Width="800">
    <Grid Background="{StaticResource Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="16"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0"
                   Fill="{StaticResource Foreground}"/>

        <Button Grid.Row="0"
                Content="X"
                x:Name="CloseButton"
                Click="CloseButton_Click"
                Width="15"
                Height="14"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Style="{StaticResource BackgroundButtons}"/>
    </Grid>
</Window>
